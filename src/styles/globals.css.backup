@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    /* --- LIGHT THEME --- */
    /* Neutrals */
    --background: oklch(97% 0 0);         /* Almost White */
    --foreground: oklch(5.35% 0 0);       /* #0D0D0D - Dark Matter Black */
    --card: oklch(100% 0 0);              /* Pure White */
    --card-foreground: oklch(5.35% 0 0);  /* #0D0D0D - Dark Matter Black */
    --popover: oklch(100% 0 0);           /* Pure White */
    --popover-foreground: oklch(5.35% 0 0); /* #0D0D0D - Dark Matter Black */
    --muted: oklch(97% 0 0);
    --muted-foreground: oklch(45% 0 0);   /* #737373 - Mid Gray */
    --border: oklch(90% 0 0);             /* Light Gray */
    --input: oklch(90% 0 0);              /* Light Gray */

    /* Accents */
    --primary: oklch(65.7% 0.2 28.5);     /* #F24C27 - Fiery Orange-Red */
    --primary-foreground: oklch(97% 0 0); /* Almost White */
    --secondary: oklch(95% 0 0);          /* Off-white */
    --secondary-foreground: oklch(5.35% 0 0);
    --accent: oklch(95% 0 0);
    --accent-foreground: oklch(5.35% 0 0);

    /* Functional */
    --destructive: oklch(46.5% 0.16 28.5); /* #A62014 - Deep Red */
    --destructive-foreground: oklch(97% 0 0);
    --ring: oklch(65.7% 0.2 28.5);        /* #F24C27 - Fiery Orange-Red */

    /* General */
    --radius: 0.5rem;
  }

  .dark {
    /* --- DARK THEME --- */
    /* Neutrals */
    --background: oklch(5.35% 0 0);       /* #0D0D0D - Dark Matter Black */
    --foreground: oklch(95% 0 0);         /* #F2F2F2 - Off-White */
    --card: oklch(15% 0 0);               /* Dark Gray, lighter than background */
    --card-foreground: oklch(95% 0 0);    /* #F2F2F2 - Off-White */
    --popover: oklch(15% 0 0);            /* Same as card for consistency */
    --popover-foreground: oklch(95% 0 0); /* #F2F2F2 - Off-White */
    --muted: oklch(15% 0 0);
    --muted-foreground: oklch(65% 0 0);   /* #A6A6A6 - Light Gray */
    --border: oklch(25% 0 0);             /* #404040 - Visible Dark Gray */
    --input: oklch(25% 0 0);              /* #404040 - Visible Dark Gray */

    /* Accents */
    --primary: oklch(65.7% 0.2 28.5);     /* #F24C27 - Fiery Orange-Red */
    --primary-foreground: oklch(97% 0 0); /* Almost White */
    --secondary: oklch(25% 0 0);
    --secondary-foreground: oklch(95% 0 0);
    --accent: oklch(25% 0 0);
    --accent-foreground: oklch(95% 0 0);

    /* Functional */
    --destructive: oklch(65.7% 0.2 28.5); /* Use the brighter #F24C27 for better visibility on dark bg */
    --destructive-foreground: oklch(97% 0 0);
    --ring: oklch(65.7% 0.2 28.5);        /* #F24C27 - Fiery Orange-Red */
  }

@layer base {
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
  
  body {
    @apply bg-background text-foreground;
    font-feature-settings: "rlig" 1, "calt" 1;
  }
  
  /* Enhanced typography and visual improvements */
  h1, h2, h3, h4, h5, h6 {
    @apply font-medium tracking-tight;
  }
  
  /* Better form controls */
  input, textarea, select {
    @apply bg-background;
  }
  
  /* Focus ring improvements */
  *:focus-visible {
    @apply outline-none ring-2 ring-ring ring-offset-2 ring-offset-background;
  }
  
  /* Scrollbar styling for webkit browsers */
  ::-webkit-scrollbar {
    @apply w-2;
  }
  
  ::-webkit-scrollbar-track {
    @apply bg-muted;
  }
  
  ::-webkit-scrollbar-thumb {
    @apply bg-border rounded-full;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    @apply bg-accent-foreground/20;
  }
}

/* AbQuanta News specific enhancements */
@layer components {
  .prose-content {
    @apply text-foreground/90 leading-relaxed;
  }
  
  .article-content {
    @apply font-article text-foreground/95 leading-[1.7];
  }
  
  .glass-effect {
    @apply bg-background/80 backdrop-blur-sm border border-border/50;
  }
  
  .content-gradient {
    background: linear-gradient(135deg, 
      oklch(from var(--card) l c h / 0.9) 0%, 
      oklch(from var(--card) l c h / 0.7) 100%);
  }
}
